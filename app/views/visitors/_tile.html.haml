.col-sm-6.col-md-4
  .panel.panel-default{style: 'border-radius: 5px;'}
    .panel-body.hover-tile{style: 'padding:0;border-radius:3px;display:inherit;margin:0;text-transform: none;white-space:normal;'}
      = link_to series_path(series.native) do
        .cover-image{class: "series_#{series.native.id}"}
          :javascript
            $(document).ready(function(){
                # if ( window.series_#{series.native.id} != true ){
                $.getScript('#{ load_tile_path(series.native) }');
                # window.series_#{series.native.id} = true;
                # }
            })
      .div{style: 'padding:15px'}
        %h4{style: 'margin-top: 0px;  white-space: normal;height:36px'}
          %span
            = link_to series.name, series_path(series.native)
        %div
          %i.mdi-av-movie.mdi-material-grey-700{style: 'vertical-align: middle;'}
          %span
            %b= "Епізод ##{series.episodes_count}"
        %div{style:'height:24px;'}
          %span "#{series.last_episode_name}"
        %div{style:'height:20px;'}
          %span.pull-left{style: 'color: #a0a0a0;font-size:16px;padding-top:6px'}
            %i.mdi-action-visibility{style: 'vertical-align:middle'}
            1,547
          %span.pull-right{style: 'color: #a0a0a0;font-size:12px;padding-top:10px'}= "#{distance_of_time_in_words_to_now(series.last_episode.created_at)} тому"
