.col-sm-6.col-md-4
  .panel.panel-default.tile-block{style: 'border-radius: 5px;'}
    .panel-body.hover-tile{style: 'padding:0;border-radius:3px;display:inherit;margin:0;text-transform: none;white-space:normal;'}
      = link_to series_path(series.native) do
        .cover-image{class: "series_#{series.native.id}"}
          .inside-image{style: "background-image: url('#{series.cover.url.sub('/upload/', '/upload/c_scale,w_320/')}');background-size:cover;background-position: 100% 5%"}
          .corner{class: "corner-category_#{series.native.category_id}"}
      .div{style: 'padding:15px'}
        %h4{style: 'margin-top: 0px;  white-space: normal;height:36px'}
          %span{style: 'font-size:20px'}
            = link_to series.name, series_path(series.native)
        %div
          %i.mdi-av-movie.mdi-material-grey-700{style: 'vertical-align: middle;'}
          %span
            %b= series.tile_episode_counter
        %div{style:'height:28px;line-height: 18px'}
          %span= "#{series.tile_last_ep_name}"
        %div{style:'height:20px;'}
          %span.pull-left{style: 'color: #a0a0a0;font-size:14px;padding-top:6px'}
            %i.mdi-action-visibility{style: 'vertical-align:middle'}
            = series.views
          %span.pull-right{style: 'color: #a0a0a0;font-size:12px;padding-top:10px'}= "#{series.amount_of_days} тому"
