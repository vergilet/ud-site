.well.bs-component
  = simple_form_for @series, html: { class: 'form-horizontal' } do |f|
    %fieldset
      = f.error_notification
      %legend Series Form
      .form-group
        = f.label :name, class: 'col-lg-2 control-label'
        .col-lg-10
          = f.input :name, class: 'form-control', placeholder: 'Series name', label: false
        = f.label :description, class: 'col-lg-2 control-label'
        .col-lg-10
          = f.text_area :description, class: 'form-control', placeholder: 'Series description', label: false, rows: 10

      .col-sm-12
        .col-sm-2
        .col-sm-10
          .fields.form-group
            = f.fields_for :episodes do |builder|
              = render 'episode_fields', f: builder
          .form-group
            .col-lg-10
              = link_to_add_fields 'Add Episode', f, :episodes

      .form-group
        .col-lg-10.col-lg-offset-2
          = button_tag 'Reset', type: :reset, class: 'btn btn-default'
          = f.button :submit, 'Apply', class: 'btn btn-primary'
