.field.episode-section
  = f.label :content, 'Content', class: 'col-lg-2 control-label'
  .col-lg-10
    = f.text_area :content, class: 'form-control', rows: 3
    %span.help-block A longer block of help text that breaks onto a new line and may extend beyond one line.

  = f.hidden_field :_destroy
  .form-group
    .pull-right
      = link_to 'remove', 'javascript:void(0)', onclick: 'removeFields(this)', class: 'btn btn-danger btn-xs'
